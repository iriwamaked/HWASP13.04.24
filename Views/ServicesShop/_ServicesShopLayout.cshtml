@using System.Security.Claims
@using HWASP.Data.Entities
@{
    //тут не наш User, это Claims!
    bool isAuthenticated=Context.User.Identity?.IsAuthenticated??false; 
    String avatarSrc = isAuthenticated
    ? Context.User.Claims.First(c=>c.Type==ClaimTypes.UserData).Value
    : "";

     String userName = isAuthenticated
    ? Context.User.Claims.First(c=>c.Type==ClaimTypes.Name).Value
    : "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HWASP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HWASP.styles.css" asp-append-version="true" />
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HWASP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ServicesShop" asp-action="Index">Услуги</a>
                        </li>
                   </ul>
                    @if(isAuthenticated)
                    {
                        @* @avatarSrc *@
                        <img class="avatarsImg" src="/img/avatars/@(avatarSrc)"/>
                    }
                    else{
                        <a class="nav-link text-dark" href="#" data-bs-toggle="modal" data-bs-target="#authModal">Sign in</a>
                    }
                </div>
            </div>
        </nav>
        <div class="row">
            <div class="col col-3">
                @{
                    var Categories=ViewData["Categories"] as List<Category>;
                }
                @foreach(var category in Categories)
                {
                    <ul class="ctg-ul"><a asp-action="Category" asp-route-id="@(category.Slug)"><li>@category.Name</li></a>
                    </ul>
                }
            </div>
            <div class="col col-9">
                <div class="sub-header">
                <h1>Послуги Вашого адвоката</h1>
                <h2>Ділова репутація та чесний вибір</h2>
                </div>
            </div>
        </div>
        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
  
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - HWASP - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

     <!-- Modal -->
<div class="modal fade" id="authModal" tabindex="-1" aria-labelledby="authModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="authModalLabel">Автентифікація (вхід у систему)</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="input-group mb-3">
                    <span class="input-group-text" id="auth-email-addon1"><i class="bi bi-person-fill"></i></span>
                    <input type="text" class="form-control" placeholder="Електронна пошта"
                            id="auth-email" aria-label="auth-email" aria-describedby="auth-email-addon1">
        </div>
         <div class="input-group mb-3">
                    <span class="input-group-text" id="auth-password-addon1"><i class="bi bi-lock"></i></span>
                    <input type="password" class="form-control"
                             id="auth-password" 
                             aria-label="Username" 
                             placeholder="Пароль"
                             aria-describedby="auth-password-addon1">
         </div>
      </div>
      <div class="modal-footer">
          <div class="alert alert-warning visually-hidden" role="alert" id="auth-warning">
          </div>
          <a class="btn btn-secondary" asp-area="" asp-controller="Home" asp-action="Registration">Регистрация</a>
            <button type="button" class="btn btn-primary" id="auth-button">Войти</button>
      </div>
    </div>
  </div>
</div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
